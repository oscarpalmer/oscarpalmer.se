{% assign description = pages.projects.description %}
{% assign slug = 'projects' %}
{% assign title = pages.projects.title %}
{% layout 'page' %}
{% block content %}
<article class="stack content__section" aria-labelledby="work_title">
	<header>
		<h2 id="work_title">{{ pages.projects.work.title | i18n }}</h2>
	</header>

	<div>
		<ul class="list">
		{% for project in pages.projects.work.items %}
			<li>
				<header>
					<h3>
						{{- project.title | i18n }}
					</h3>
				</header>
				<div>{{ project.description | markdown }}</div>
			</li>
		{% endfor %}
	</ul>
	</div>
</article>

<hr>

<article class="stack content__section" aria-labelledby="personal_title">
	<header>
		<h2 id="personal_title">{{ pages.projects.personal.title | i18n }}</h2>
	</header>

	<ul class="list">
		{% for project in pages.projects.personal.items %}
			<li>
				<header>
					<h3>
						<a href="{{ project.url }}" hreflang="en">
							{{- project.title -}}
						</a>
					</h3>
				</header>

				<div>{{ project.description | markdown }}</div>
			</li>
		{% endfor %}
	</ul>

	<p>{{ pages.projects.personal.suffix | i18n }}
			<a href="https://github.com/oscarpalmer" hreflang="en">GitHub</a>.</p>
</article>
{% endblock %}
