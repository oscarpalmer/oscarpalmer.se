{% assign description = pages.about.description %}
{% assign slug = 'about' %}
{% assign title = pages.about.title %}
{% layout 'page' %}
{% block content %}
<aside>
	<figure>
		<img src="assets/images/selfie.jpg" alt="{{ pages.about.photo.alt | i18n }}">
		<figcaption>
			<p aria-label="{{ pages.about.quickie.paragraph | i18n }}" role="note">
				<span aria-hidden="true">{{ pages.about.quickie.name }}</span>
				<span aria-hidden="true">{{ pages.about.quickie.age }}</span>
				<span aria-hidden="true">{{ pages.about.quickie.pronouns | i18n }}</span>
				<span aria-hidden="true">🏳️‍🌈&nbsp;queer</span>
			</p>
		</figcaption>
	</figure>
</aside>
<article aria-labelledby="intro_title">
	<header>
		<h2 id="intro_title">{{ pages.about.intro.title | i18n }}</h2>
	</header>
	<div>
		{{ pages.about.intro.content | markdown }}
	</div>
</article>
<hr>
<article aria-labelledby="favourites_title">
	<header>
		<h2 id="favourites_title">{{ pages.about.favourites.title | i18n }}</h2>
		<p>{{ pages.about.favourites.description | markdown }}</p>
	</header>
	<ul>
		{% for favourite in pages.about.favourites.items %}
		<li>
			<a href="{{ favourite.url }}" aria-describedby="{{ favourite.id }}"
				data-description="{{ favourite.description | i18n }}">
				{% if favourite.icon %}{{ favourite.icon | icon }}{% endif %}
				<span>{{ favourite.title | i18n }}</span>
				</a>
				<p id="{{ favourite.id }}">{{ favourite.description | i18n }}</p>
		</li>
		{% endfor %}
		</ul>
</article>
<hr>
<article aria-labelledby="biography_title">
	<header>
		<h2 id="biography_title">{{ pages.about.biography.title | i18n }}</h2>
	</header>
	<div>
		{{ pages.about.biography.content | markdown }}
		<span aria-hidden="true">🖖</span>
	</div>
</article>
{% endblock %}
