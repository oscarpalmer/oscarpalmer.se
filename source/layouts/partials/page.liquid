<!doctype html>
<html dir="ltr" lang="{{ page.url | locale }}">
	{% include 'head' %}
	<body class="page__{{ slug }}">
		{% include 'banner' %}
		<main class="content stack" id="content">
			{% if title %}
				<header class="header">
					<h1 class="header__title">{{ title | i18n }}</h1>
					{% if description %}
						<p class="header__description">{{ description | i18n }}</p>
					{% endif %}
				</header>
			{% endif %}
			{% block content %}
			{% endblock %}
		</main>
		{% include 'footer' %}
	</body>
</html>
