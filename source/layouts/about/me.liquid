{% assign description = pages.about.me.description %}
{% assign slug = 'about-me' %}
{% assign title = pages.about.me.title %}
{% layout 'page' %}
{% block content %}
<aside class="selfie">
	<figure class="selfie__figure">
		<img
			alt="{{ pages.about.me.photo.alt | i18n }}"
			class="selfie__image"
			src="assets/images/selfie.jpg"
		>
		<figcaption class="selfie__caption">
			<p class="oui-vh">{{ pages.about.me.quickie.paragraph | i18n }}</p>
			<ul class="list" aria-hidden="true">
				<li aria-hidden="true">{{ pages.about.me.quickie.name }}</li>
				<li aria-hidden="true">{{ pages.about.me.quickie.age }}</li>
				<li aria-hidden="true">{{ pages.about.me.quickie.pronouns | i18n }}</li>
				<li aria-hidden="true">🏳️‍🌈&nbsp;&nbsp;queer</li>
			</ul>
		</figcaption>
	</figure>
</aside>

<article class="stack content__section" aria-labelledby="intro_title">
	<header>
		<h2 id="intro_title">{{ pages.about.me.intro.title | i18n }}</h2>
	</header>

	<div class="stack stack-text markdown">{{ pages.about.me.intro.content | markdown }}</div>
</article>

<hr>

<article class="stack content__section" aria-labelledby="biography_title">
	<header>
		<h2 id="biography_title">{{ pages.about.me.biography.title | i18n }}</h2>
	</header>
	<div class="stack stack-text markdown">{{ pages.about.me.biography.content | markdown }}</div>
</article>

<hr>

<article class="stack content__section" aria-labelledby="favourites_title">
	<header>
		<h2 id="favourites_title">{{ pages.about.me.favourites.title | i18n }}</h2>
	</header>

	<div>
		<ul class="list">
		{% for favourite in pages.about.me.favourites.items %}
			<li>
				<a
					aria-describedby="{{ favourite.id }}"
					
					href="{{ favourite.url }}"
				>
					{{ favourite.title | i18n }}
				</a>
				<p id="{{ favourite.id }}">
					{{ favourite.description | i18n }}
				</p>
			</li>
		{% endfor %}
	</ul>
	</div>
</article>
{% endblock %}
